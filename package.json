    "@typescript-eslint/parser": "^5.12.0",
    "@vitest/coverage-c8": "^0.26.3",
    "eslint": "^8.9.0",
    "esno": "^0.16.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "typescript": "^4.5.5",
    "vite": "^3.2.4",
    "vitepress": "1.0.0-alpha.29",
